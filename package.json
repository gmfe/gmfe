{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "start-storybook -p 7000",
    "build": "build-storybook -c .storybook -o docs",
    "prebuild": "rm -rf docs; mkdir docs;",
    "publish-latest": "lerna publish --force-publish",
    "publish-beta": "lerna publish --force-publish --dist-tag beta"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "lint-staged": {
    "./packages/**/*.js": [
      "eslint --cache --fix"
    ],
    "./packages/**/*.less": [
      "stylelint --cache --fix"
    ]
  },
  "browserslist": {
    "production": [
      "iOS >= 8",
      "Android >= 5.0"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.8.6",
    "@storybook/addon-info": "^5.3.14",
    "@storybook/addon-notes": "^5.3.14",
    "@storybook/addon-storysource": "^5.3.14",
    "@storybook/react": "^5.3.14",
    "@svgr/webpack": "^5.2.0",
    "@types/react": "^16.9.23",
    "@welldone-software/why-did-you-render": "^4.0.5",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "babel-preset-gm-react-app": "^1.1.1",
    "big.js": "^5.2.2",
    "cropperjs": "^1.5.6",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-plugin-gm-react-app": "^1.1.1",
    "file-loader": "^5.1.0",
    "husky": "^4.2.3",
    "less": "^3.11.1",
    "less-loader": "^5.0.0",
    "lint-staged": "^10.0.8",
    "lodash": "^4.17.15",
    "mobx": "^5.15.4",
    "mobx-react": "^6.1.8",
    "moment": "^2.24.0",
    "path": "^0.12.7",
    "prettier": "^1.18.2",
    "prop-types": "^15.7.2",
    "query-string": "^6.11.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-photo-view": "^1.2.6",
    "react-table": "7.0.0-rc.11",
    "react-table-v6": "6.8.6",
    "react-window": "^1.8.5",
    "sortablejs": "^1.10.2",
    "style-loader": "^1.1.3",
    "styled-components": "^5.1.0",
    "stylelint": "^13.2.0",
    "stylelint-config-standard": "^20.0.0",
    "url-loader": "^3.0.0",
    "webpack": "^4.41.6"
  }
}
